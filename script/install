#!/usr/bin/env bash
#
# Run all dotfiles installers.

set -e

cd "$(dirname $0)"/..

# find the installers and run them iteratively
find . -name install.sh -execdir sh {} \;

# Run Homebrew through the Brewfile for non Mac systems (strap does it)
if ! [ "$(uname -s)" == "Darwin" ]
then
    echo "â€º brew bundle"
    brew bundle
fi
